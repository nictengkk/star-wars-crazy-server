{
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 10,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": "warn",
    "consistent-return": 0,
    "func-names": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "camelcase":  ["always",
      {"ignoreDestructuring": true
    }],
    "prettier/prettier": [
      "error"
    ]
  },

  "plugins": ["prettier", "import"]
}